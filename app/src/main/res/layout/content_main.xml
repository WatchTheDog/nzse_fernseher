<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.timo.hans.remoteachtelikberghofer.MainActivity"
    tools:showIn="@layout/activity_main">

    <GridLayout
        android:layout_width="358dp"
        android:layout_height="510dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnCHdown"
            android:layout_width="172dp"
            android:layout_height="120dp"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:layout_columnSpan="3"
            android:layout_row="0"
            android:layout_rowSpan="17"
            android:background="@color/carrot"
            android:text="CH-"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="321dp" />

        <Button
            android:id="@+id/btnCHup"
            android:layout_width="172dp"
            android:layout_height="120dp"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_margin="3dp"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:background="@color/carrot"
            android:text="CH+" />

        <Button
            android:id="@+id/btnVolDown"
            android:layout_width="172dp"
            android:layout_height="120dp"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_margin="3dp"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:background="@color/carrot"
            android:text="Vol-" />

        <Button
            android:id="@+id/btnVolUp"
            android:layout_width="172dp"
            android:layout_height="120dp"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_margin="3dp"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:background="@color/carrot"
            android:text="Vol+" />

        <Button
            android:id="@+id/btnChangeRatio"
            android:layout_width="172dp"
            android:layout_height="120dp"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_margin="3dp"
            android:layout_row="2"
            android:layout_rowSpan="1"
            android:background="@color/carrot"
            android:text="Change Aspect Ratio" />

        <Button
            android:id="@+id/btnPicInPic"
            android:layout_width="172dp"
            android:layout_height="120dp"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_margin="3dp"
            android:layout_row="2"
            android:layout_rowSpan="1"
            android:background="@color/carrot"
            android:text="Picture in Picture" />

        <Button
            android:id="@+id/btnRewind"
            android:layout_width="112dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_margin="3dp"
            android:layout_row="3"
            android:background="@color/carrot"
            android:text="Re" />

        <Button
            android:id="@+id/btnPlayPause"
            android:layout_width="112dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_margin="3dp"
            android:layout_row="3"
            android:background="@color/carrot"
            android:text="Play/Pause" />

        <Button
            android:id="@+id/btnFastForward"
            android:layout_width="112dp"
            android:layout_height="100dp"
            android:layout_column="4"
            android:layout_columnSpan="2"
            android:layout_margin="3dp"
            android:layout_row="3"
            android:background="@color/carrot"
            android:text="Fast Forward" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>
